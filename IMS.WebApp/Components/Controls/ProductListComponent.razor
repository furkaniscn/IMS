@inherits ComponentBase

<table class="table ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (products is not null && products.Count > 0)
        {
            foreach (var inv in products)
            {
                //rendermode ile render kısmının InteractiveServer olmasını sağladık.
                <ProductListItemComponent @rendermode="InteractiveServer" Product="inv"/>
            }
        }
    </tbody>
</table>
